#!/usr/bin/env bash
# with-packages nix-wrapped cachix
hostname=$(hostname -s)
tmpdir=$(mktemp -d)
cd ~/cfg
[[ $hostname != keith-mac ]] && nix build .#nixosConfigurations.$hostname -o "$tmpdir"/nixos
nix build .#homeConfigurations.$hostname -o "$tmpdir"/home
cachix push kwbauson "$tmpdir"/*
rm -rf "$tmpdir"
